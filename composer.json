{
    "name": "timkley/awork-php-sdk",
    "description": "A PHP HTTP Client for the awork API",
    "version": "0.3",
    "keywords": [
        "php",
        "client",
        "awork",
        "api"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Kleyersburg",
            "email": "timkley@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2|^8.3|^8.4",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/http": "^v11.3.1|^v12.0",
        "nesbot/carbon": "^3.8"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1.8",
        "pestphp/pest": "^v3.1.0"
    },
    "autoload": {
        "psr-4": {
            "Awork\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpstan": [
            "./vendor/bin/phpstan --memory-limit=2048M"
        ],
        "test": [
            "./vendor/bin/pest"
        ],
        "prepush": [
            "@phpstan",
            "@test"
        ]
    }
}
